@{
    ViewData["Title"] = "Grade Calculator";
    
}

@model GradeCalculatorModel

<body>

    <!--grade calculator form-->
    <form method="post" id="form">
        <label for="assignments">Assignments: </label>
        <input type="number" step="0.01" max="50" value=0.0 id="assignments" asp-for="assignments" /><label class="" for="assignments"> % of 50%</label>
        <br /><br />
        <label for="groupProject">Group Project:  </label>
        <input type="number" step="0.01" max="10" value=0.0 id="groupProject" asp-for="groupProject" /><label for="assignments"> % of 10%</label>
        <br /><br />
        <label for="quizzes">Quizzes:  </label>
        <input type="number" step="0.01" max="10" value=0.0 id="quizzes" asp-for="quizzes" /><label for="assignments"> % of 10%</label>
        <br /><br />
        <label for="exams">Exams:  </label>
        <input type="number" step="0.01" max="20" value=0.0 id="exams" asp-for="exams" /><label for="assignments"> % of 20%</label>
        <br /><br />
        <label for="intex">INTEX:  </label>
        <input type="number" step="0.01"  value=0.0 id="intex" asp-for="intex" /><label for="assignments"> % of 10%</label>
        <br /><br />
        <input type="submit" id="submitButton" value="Calculate Grade" />
        <div asp-validation-summary="All"></div>
    </form>
    <br />

    <!--grade calculation output-->
    <h3>Final Grade:</h3>
    <div class="gradeResults">
        <h4 id="calculatedLetterGrade"></h4>
        <h5 id="calculatedPercentGrade"></h5>
    </div>

    <br /><br />

</body>